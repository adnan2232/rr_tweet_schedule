
<div class='container border border-dark rounded p-5 h-100 shadow'>
    <h1 class='d-flex justify-content-center align-items-center'>
        Reset Password
    </h1>

    <%=form_with model:@user,url: password_reset_edit_path(token:params[:token]), method: :put, 
    class: 'd-flex flex-column justify-content-around', data:{turbo:false} do|form|%>
        <div class='p-2 m-2'>
            <%= form.label :password, role:'button' %>
            <%= form.password_field :password, class:'w-100 rounded border-light p-2', placeholder:'password'%>
        </div>
        <div class='p-2 m-2'>
            <%= form.label :password_confirmation, role:'button' %>
            <%= form.password_field :password_confirmation, class:'w-100 rounded border-light p-2', placeholder:'re-type password'%>
        </div>

        <div class='p-2 d-flex justify-content-center align-items-center m-2'>
            <%= form.submit "Reset password",class:'btn btn-primary'%>
        </div>

        <%if form.object.errors.any?%>
            <div class='alert alert-danger p-2 m-2'>
                <%form.object.errors.full_messages.each do|message|%>
                    <%=message%>
                <%end%>
            <div>
        <%end%>
        
    <%end%>

</div>